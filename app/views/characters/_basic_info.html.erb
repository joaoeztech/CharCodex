<div class="character-basic-info">
  <%= form_for @character, :url => update_characters_path, :method => :put, :remote => true do |f| %>
    <%= f.hidden_field :id %>
    <div class="basic-info-input">
      <%= f.text_field :name %>
      <%= f.label :name %>
    </div>
    <div class="basic-info-input">
      <span class="readonly-field">
        <%= current_user.name %>
      </span>
      <%= label :character, '', t('activerecord.attributes.character.player_name') %>
    </div>
  <% end  %>
</div>