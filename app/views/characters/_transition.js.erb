<% if params[:success] %>
  // Load the character class selection box
  Lightview.show({
    url: '<%= send(route_helper, @character.id) %>',
    type: 'ajax',
    options: {<%=raw YAML::load_file("#{Rails.root}/config/lightview.yml").to_json.gsub(/^{|}$/, "").gsub(/\\|"/, "") %>}
  });
<% else %>
  alert('<%= "#{t('character_sheet.forms.error')}:\n #{show_errors(@character)}" %>');
<% end %>