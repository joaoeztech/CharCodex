group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier',     ">= 1.0.3"
  gem 'therubyracer'
end

# jQuery is the default JavaScript library in Rails 3.1
gem 'jquery-rails', '2.1.4'
gem 'jquery-ui-rails'

